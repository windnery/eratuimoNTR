; 标题画面
@SYSTEM_TITLE

; 初始化全局变量
GLOBAL:0 = 0
GLOBAL:1 = 0
GLOBAL:2 = 0
GLOBAL:3 = 0
GLOBAL:4 = 0

; 设置标题画面
REDRAW 1

; 计算版本号显示
LOCAL:0 = GAMEBASE_VERSION / 1000
LOCAL:1 = GAMEBASE_VERSION % 1000 / 10
LOCAL:2 = GAMEBASE_VERSION % 10
STRLENFORM {LOCAL:1}
LOCALS:1 = %"0" * (2 - RESULT:0)%{LOCAL:1}
LOCALS:0 = v{LOCAL:0}.%LOCALS:1%
SIF LOCAL:2 != 0
	LOCALS:0 = %LOCALS:0%.{LOCAL:2}

; 显示标题信息
DRAWLINE 
ALIGNMENT CENTER
PRINTFORML 【EraTaimaCollege_NTR】
PRINTFORML %LOCALS:0%
